---
import BaseLayout from "../layouts/BaseLayout.astro";
import Sidebar from "../components/sidebar.astro";
---

<BaseLayout title="Blithchron'24 | Registration">
  <main class="flex">
    <Sidebar
      page_title="Register"
      page_desc="Register Yourself and be a part of this amazing event"
    />
    <div class="px-10 w-3/4 h-screen ms-60 mt-5 flex justify-center items-center">
      <form class="w-full max-w-lg">
        <div class="flex flex-wrap -mx-3 mb-3">
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"
              for="grid-first-name"
            >
              First Name
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-slate-200"
              id="grid-first-name"
              type="text"
              placeholder="Sachin"
            />
          </div>
          <div class="w-full md:w-1/2 px-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"
              for="grid-last-name"
            >
              Last Name
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-slate-200 focus:border-gray-500"
              id="grid-last-name"
              type="text"
              placeholder="Sharma"
            />
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"
              for="email"
            >
              Email
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-slate-200 focus:border-gray-500"
              id="grid-email"
              type="email"
              placeholder="abc@xyz.co.in"
            />
            <p class="text-gray-600 text-xs italic">
              You will recieve all the info via your email.
            </p>
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-2">
          <div class="w-full px-3 mb-8">
            <label
              class="block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"
              for="grid-city"
            >
              College Name
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-slate-200 focus:border-gray-500"
              id="grid-city"
              type="text"
              placeholder="Indian Institute of Technology Gandhinagar"
            />
          </div>
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"
              for="grid-state"
            >
              Event
            </label>
            <div class="relative">
              <select
                class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-slate-200 focus:border-gray-500"
                id="grid-state"
              >
                <option>Aerosol</option>
                <option>Antaragnee</option>
                <option>Blith Master Of Magic</option>
                <option>Dell'arte</option>
                <option>Euphony</option>
                <option>Mirage</option>
                <option>Panache</option>
                <option>Pronites</option>
                <option>Quizzitch</option>
                <option>Skirmish</option>
                <option>Street Beat</option>
                <option>String theory</option>
                <option>Synchronize</option>
                <option>Unkahi</option>
              </select>
              <div
                class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
              >
                <svg
                  class="fill-current h-4 w-4"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 20 20"
                  ><path
                    d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                  ></path></svg
                >
              </div>
            </div>
          </div>
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"
              for="grid-zip"
            >
              Team Name
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-slate-200 focus:border-gray-500"
              id="grid-zip"
              type="text"
              placeholder="Blith Blazer's"
            />
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mt-6">
          <div class="w-full px-3">
            <input type="checkbox" class="w-4 h-4" required/>
            <label for="checkbox" class="span uppercase italic text-gray-700 text-xs font-bold tracking-tight">By checking this box you agree with the terms and conditions of the event.</label>
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mt-3">
          <div class="w-full px-3 text-center">
          <button type="submit" class="w-1/2 h-10 bg-indigo-700 tracking-wide text-white font-semibold rounded-xl hover:bg-indigo-600 transition ease hover:scale-105 duration-300">Register</button>
        </div>
        </div>
      </form>
    </div>
  </main>
</BaseLayout>
